{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AppSession",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Unique user identifier (UUID)"
    },
    "joined_at": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp of session initialization"
    },
    "avatar_state": {
      "type": "object",
      "description": "Snapshot of symbolic identity output",
      "$ref": "./avatar.schema.json"
    },
    "tree_of_life": {
      "type": "object",
      "description": "Trait values and overall health",
      "$ref": "./tree_of_life.schema.json"
    },
    "xp_profile": {
      "type": "object",
      "description": "XP, merit level, and lock state",
      "$ref": "./xp_meritcoin.schema.json"
    },
    "sacred_path": {
      "type": "string",
      "description": "Spiritual or philosophical archetype selected by user"
    },
    "group_opt_in": {
      "type": "boolean",
      "description": "Whether the user has enabled symbolic group quests"
    },
    "session_aura_status": {
      "type": "string",
      "enum": ["stable", "flickering", "locked", "surging"],
      "description": "Symbolic session health affecting UI feedback"
    }
  },
  "required": [
    "user_id",
    "joined_at",
    "avatar_state",
    "tree_of_life",
    "xp_profile",
    "sacred_path",
    "group_opt_in",
    "session_aura_status"
  ],
  "additionalProperties": false
}
