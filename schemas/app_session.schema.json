{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Session Schema",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique session identifier"
    },
    "user_id": {
      "type": "string",
      "description": "User's encrypted or symbolic ID"
    },
    "sacred_path": {
      "type": "string",
      "description": "Declared sacred path of the user"
    },
    "aura_color": {
      "type": "string",
      "description": "Userâ€™s symbolic aura (hex code)"
    },
    "current_screen": {
      "type": "string",
      "description": "Active screen or route name"
    },
    "onboarding_complete": {
      "type": "boolean",
      "description": "Has the user completed initial onboarding?"
    },
    "group_opt_in": {
      "type": "boolean",
      "description": "Whether the user has opted into group rituals"
    },
    "last_sync": {
      "type": "string",
      "format": "date-time",
      "description": "Last time the frontend synced session state"
    }
  },
  "required": [
    "session_id",
    "user_id",
    "sacred_path",
    "aura_color",
    "current_screen",
    "onboarding_complete"
  ],
  "additionalProperties": false
}
