{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserProfile",
  "type": "object",
  "required": ["mbti", "iq", "eq", "moral"],
  "properties": {
    "mbti": {
      "type": "string",
      "description": "Myers-Briggs type (e.g., INTJ, ENFP)"
    },
    "iq": {
      "type": "integer",
      "minimum": 50,
      "maximum": 200,
      "description": "Cognitive intelligence score"
    },
    "eq": {
      "type": "integer",
      "minimum": 50,
      "maximum": 200,
      "description": "Emotional intelligence score"
    },
    "moral": {
      "type": "string",
      "enum": ["care", "fairness", "loyalty", "authority", "purity", "liberty"],
      "description": "Dominant moral foundation"
    },
    "group_opt_in": {
      "type": "boolean",
      "default": false,
      "description": "Whether the user wishes to participate in group symbolic rituals (co-op quests)"
    }
  },
  "additionalProperties": false
}
